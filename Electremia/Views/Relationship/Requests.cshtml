@using Electremia.ViewModels;
@model List<RelationshipViewModel>

<div class="page-header">
    <h1>Requests <small>Received and sended</small></h1>
</div>
<div class="container">
    <div class="row">
        <div class="col-lg-6">
            <h4>Received</h4>
            @{
                foreach (var relationshipViewModel in Model)
                {
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <h4>@relationshipViewModel.Username</h4>
                            <span>Send you a friend request.</span>
                            <button class="btn btn-info">Accept</button>
                            <button class="btn btn-danger">Delete</button>
                        </div>
                    </div>
                }
            }
        </div>
        <div class="col-lg-6">
            <h4>Sended</h4>
        </div>
    </div>
</div>


@ViewData["Message"]