@using Electremia.ViewModels
@model LoginViewModel
@{ ViewData["Title"] = "Login page"; }
@section Scripts { 
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

<div class="container">
    <h2>Login</h2>
    <hr />
    <form method="post">
        <div class="form-group">
            <label asp-for="Username"></label>
            <input asp-for="Username" class="form-control" placeholder="Enter your username" data-val="true" />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" data-val="true" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-info">Submit</button>
        <hr />
    </form>
    <div class="col-lg-12 text-center">
        <h6>@ViewData["Message"]</h6>
    </div>
</div>