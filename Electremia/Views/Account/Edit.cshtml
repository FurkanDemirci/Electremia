@using Electremia.ViewModels
@model EditAccountViewModel
@{
    ViewData["Title"] = "Account Page";
}

<div class="container">
    <div class="row">
        <h2>Edit account</h2>
        <form method="post">
            <div class="col-lg-6">
                <div class="form-group">
                    <label asp-for="@Model.User.ProfilePicture"></label>
                    <input asp-for="@Model.User.ProfilePicture" class="form-control" readonly />
                    <input type="file" id="ProfilePicture">
                    <p class="help-block">Upload new profile picture.</p>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.User.CoverPicture"></label>
                    <input asp-for="@Model.User.CoverPicture" class="form-control" readonly />
                    <input type="file" id="CoverPicture">
                    <p class="help-block">Upload new cover picture.</p>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.User.Jobs"></label>
                    <input asp-for="@Model.User.Jobs.Count" class="form-control" readonly />
                </div>
@*                <div class="form-group">*@
@*                    <label asp-for="@Model.User.Firstname"></label>*@
@*                    <input asp-for="@Model.User.Firstname" class="form-control" />*@
@*                </div>*@
@*                <div class="form-group">*@
@*                    <label asp-for="@Model.User.Lastname"></label>*@
@*                    <input asp-for="@Model.User.Lastname" class="form-control" />*@
@*                </div>*@
            </div>
            <div class="col-lg-6">
                <div class="form-group">
                    <label asp-for="@Model.User.UserId"></label>
                    <input asp-for="@Model.User.UserId" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <label asp-for="@Model.User.Username"></label>
                    <input asp-for="@Model.User.Username" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="@Model.User.Password"></label>
                    <input asp-for="@Model.User.Password" type="password" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="@Model.User.Firstname"></label>
                    <input asp-for="@Model.User.Firstname" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="@Model.User.Lastname"></label>
                    <input asp-for="@Model.User.Lastname" class="form-control" />
                </div>
            </div>
            <button type="submit" class="btn btn-info">Submit</button>
        </form>
    </div>
    <div class="col-lg-12 text-center">
        <h6>@ViewData["Error"]</h6>
        <h6>@ViewData["Worked"]</h6>
    </div>
</div>
