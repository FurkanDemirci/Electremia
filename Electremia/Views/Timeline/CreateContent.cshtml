@using Electremia.ViewModels
@model CreateContentViewModel
@{ ViewData["Title"] = "Create content Page"; }
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

<div class="page-header">
    <h1>Create content page <small>Create your content </small></h1>
</div>
@{
    if (ViewData["Message"] != null)
    {
        <div class="alert alert-warning alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            @ViewData["Message"]
        </div>
    }
}
<ul class="nav nav-tabs">
    <li class="active">
        <a href="#post" data-toggle="tab" aria-expanded="true">Post</a>
    </li>
    <li class="">
        <a href="#product" data-toggle="tab" aria-expanded="false">Product</a>
    </li>
</ul>
<div id="myTabContent" class="tab-content">
    <div class="tab-pane fade active in" id="post">
        <div class="page-header">
            <h4>Create post <small>A standart post </small></h4>
        </div>
        <div class="jumbotron">
            <form method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="PostViewModel.Title"></label>
                    <input asp-for="PostViewModel.Title" class="form-control" data-val="true" placeholder="Title">
                    <span asp-validation-for="PostViewModel.Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PostViewModel.Description"></label>
                    <textarea asp-for="PostViewModel.Description" class="form-control" data-val="true" placeholder="Description"></textarea>
                    <span asp-validation-for="PostViewModel.Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PostViewModel.Picture"></label>
                    <input asp-for="PostViewModel.Picture" class="form-control" accept="image/*" multiple />
                    <p class="help-block">Upload images for your post's.</p>
                </div>
                <button type="reset" class="btn btn-default">Reset</button>
                <button type="submit" class="btn btn-info">Submit</button>
            </form>
        </div>
    </div>
    <div class="tab-pane fade" id="product">
        <div class="page-header">
            <h4>Create product <small>to sell to your friends </small></h4>
        </div>
        <div class="jumbotron">
            <form method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="ProductViewModel.Title"></label>
                    <input asp-for="ProductViewModel.Title" class="form-control" data-val="true" placeholder="Title">
                    <span asp-validation-for="ProductViewModel.Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProductViewModel.Description"></label>
                    <textarea asp-for="ProductViewModel.Description" class="form-control" data-val="true" placeholder="Description"></textarea>
                    <span asp-validation-for="ProductViewModel.Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProductViewModel.Price" class="control-label"></label>
                    <div class="input-group">
                        <span class="input-group-addon">€</span>
                        <input asp-for="ProductViewModel.Price" class="form-control" data-val="true">
                        <span asp-validation-for="ProductViewModel.Price" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="ProductViewModel.Picture"></label>
                    <input asp-for="ProductViewModel.Picture" class="form-control" accept="image/*" multiple />
                    <p class="help-block">Upload images of your product</p>
                </div>
                <button type="reset" class="btn btn-default">Reset</button>
                <button type="submit" class="btn btn-info">Submit</button>
            </form>
        </div>
    </div>
</div>